<h2 class="text-3xl font-bold text-center text-blue-800 mb-6">Iniciar sesión</h2>

<%= form_with scope: :admin_user, url: admin_user_session_path, class: "max-w-md mx-auto bg-white p-8 rounded shadow", local: true do |f| %>
  <div class="mb-4">
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= f.email_field :email, autofocus: true, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" %>
  </div>

  <div class="mb-4 flex items-center">
    <%= f.check_box :remember_me, class: "mr-2" %>
    <%= f.label :remember_me, class: "text-sm text-gray-600" %>
  </div>

  <div>
    <%= f.submit "Iniciar sesión", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded" %>
  </div>
<% end %>