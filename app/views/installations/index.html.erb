<div class="max-w-6xl mx-auto mt-10 px-4">
  <h1 class="text-2xl font-bold mb-6">Instalaciones Programadas</h1>

  <div class="mb-4">
    <%= link_to "Nueva instalación", new_installation_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded" %>
  </div>

  <% if @installations.any? %>
    <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
      <thead class="bg-gray-100">
        <tr>
          <th class="px-4 py-2 text-left">Cliente</th>
          <th class="px-4 py-2 text-left">Dirección</th>
          <th class="px-4 py-2 text-left">Inicio</th>
          <th class="px-4 py-2 text-left">Fin</th>
          <th class="px-4 py-2 text-left">Técnico</th>
          <th class="px-4 py-2 text-left">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @installations.each do |installation| %>
          <tr class="border-t">
            <td class="px-4 py-2"><%= installation.customer_name %></td>
            <td class="px-4 py-2"><%= installation.address %></td>
            <td class="px-4 py-2"><%= l(installation.starts_at, format: :short) %></td>
            <td class="px-4 py-2"><%= l(installation.ends_at, format: :short) %></td>
            <td class="px-4 py-2"><%= installation.technician.name %></td>
            <td class="px-4 py-2 flex gap-2">
              <%= link_to "Ver", installation_path(installation), class: "text-blue-600 hover:underline" %>
              <%= link_to "Editar", edit_installation_path(installation), class: "text-yellow-600 hover:underline" %>
              <%= link_to "Eliminar", installation_path(installation),
                          method: :delete,
                          data: { confirm: "¿Estás seguro?" },
                          class: "text-red-600 hover:underline" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-gray-600">No hay instalaciones programadas.</p>
  <% end %>
</div>